    "functions":
    [
        {
            "name": "source_image_menu",
            "type": "menu_string",
            "tool": "image",
            "label": "Source Image",
            "description": "Choose an image",
            "items": [ "Ada", "Crab Nebula", "Earth", "Everest", "Flower", "Forest", "Hong Kong", "Lighthouse", "Sunrise" ],
            "default_choice": 6
        },
        {
            "name": "hue_levels_slider",
            "type": "slider_int",
            "min": 1,
            "max": 16,
            "step": 1,
            "default_value": 4,
            "label": "Hue Levels",
            "description": "Number of distinct hues"
        },
        {
            "name": "saturation_levels_slider",
            "type": "slider_int",
            "min": 1,
            "max": 16,
            "step": 1,
            "default_value": 4,
            "label": "Saturation Levels",
            "description": "Number of distinct saturation levels"
        },
        {
            "name": "brightness_levels_slider",
            "type": "slider_int",
            "min": 1,
            "max": 16,
            "step": 1,
            "default_value": 4,
            "label": "Brightness Levels",
            "description": "Number of distinct brightness levels"
        }
    ],
    "effects":
    [        
        {
            "name": "rgb to hsv",
            "type": "eff_rgb_to_hsv_ucolor"
        },
        {
            "name": "hsv to rgb",
            "type": "eff_hsv_to_rgb_ucolor"
        },
        {
            "name": "posterize",
            "type": "eff_posterize_ucolor",
            "h_levels": { "functions": [ "hue_levels_slider" ] },
            "s_levels": { "functions": [ "saturation_levels_slider" ] },
            "v_levels": { "functions": [ "brightness_levels_slider" ] }
        }
    ],
    "queue": 
    [
        {
            "name": "posterize",
            "source": { "functions": [ "source_image_menu" ] },
            "type": "uimage",
            "mode": "ephemeral",  
            "effects": [ "rgb to hsv", "posterize", "hsv to rgb" ]
        }
    ],
    "widget groups":
    [
        {
            "name": "home_group",
            "widgets": [ "hue_levels_slider", "saturation_levels_slider", "brightness_levels_slider" ]
        },
        {
            "name": "source_image_group",
            "widgets": [ "source_image_menu" ]
        }
    ]
}